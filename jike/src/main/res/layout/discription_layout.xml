<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/img_discription" />

    <TextView
        android:layout_margin="10dp"
        android:textSize="8dp"
        android:textColor="@color/cardview_light_background"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_discription"
        android:layout_alignLeft="@id/img_discription"
        android:layout_alignTop="@id/img_discription"/>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:id="@+id/tv1_discription"
        android:textColor="@color/cardview_light_background"
        android:layout_alignRight="@id/img_discription"
        android:layout_alignBottom="@id/img_discription"/>
</RelativeLayout>